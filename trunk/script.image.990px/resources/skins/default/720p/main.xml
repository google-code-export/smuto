<window type="window" id="14000">
    <defaultcontrol>100</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <texture>black.png</texture>
            </control>
            <control type="image">
                <posx>574</posx>
                <posy>294</posy>
                <width>66</width>
                <height>66</height>
                <texture>loader.gif</texture>
            </control>
            <control type="label" id="101">
                <posx>20</posx>
                <posy>35</posy>
                <width>1200</width>
                <height>100</height>
                <align>left</align>
                <aligny>top</aligny>
                <label></label>
                <textcolor>FFAAAAAA</textcolor>
            </control>
            <control type="label" id="102">
                <posx>20</posx>
                <posy>60</posy>
                <width>1200</width>
                <height>60</height>
                <align>left</align>
                <aligny>top</aligny>
                <label>32001</label>
                <textcolor>FFAAAAAA</textcolor>
                <font>font13</font>
            </control>
            <control type="list" id="100">
                <!--Main List of Images-->
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <scrolltime>200</scrolltime>
                <orientation>horizontal</orientation>
                <preloaditems>5</preloaditems>
                <itemlayout width="1280" height="720">
                    <control type="image">
                        <!--The Picture-->
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <fadetime>200</fadetime>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                    <control type="image">
                        <!--background for title-->
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>100</height>
                        <texture>black.png</texture>
                        <colordiffuse>CCFFFFFF</colordiffuse>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                    </control>
                    <control type="label">
                        <!--label for title-->
                        <posx>20</posx>
                        <posy>10</posy>
                        <width>1200</width>
                        <height>100</height>
                        <align>left</align>
                        <aligny>top</aligny>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FFDDDDDD</textcolor>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                        <font>font13</font>
                    </control>
                </itemlayout>
                <focusedlayout width="1280" height="720">
                    <control type="image">
                        <!--the picture-->
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>720</height>
                        <fadetime>200</fadetime>
                        <texture background="true">$INFO[ListItem.Icon]</texture>
                        <aspectratio>scale</aspectratio>
                    </control>
                    <control type="image">
                        <!--background for title-->
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1280</width>
                        <height>100</height>
                        <texture>black.png</texture>
                        <colordiffuse>CCFFFFFF</colordiffuse>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                    </control>
                    <control type="label">
                        <!--label for title-->
                        <posx>20</posx>
                        <posy>10</posy>
                        <width>1200</width>
                        <height>100</height>
                        <font>font48b</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FFDDDDDD</textcolor>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                        <font>font13</font>
                    </control>
                    <!--<control type="image">
                        <animation type="Focus">
                            <effect type="fade" start="70" end="100" time="100" delay="500"/>
                        </animation>
                        <posx>600</posx>
                        <posy>320</posy>
                        <width>80</width>
                        <height>80</height>
                        <texture>play_.png</texture>
                    </control>-->
                    <control type="image">
                        <posx>10</posx>
                        <posy>320</posy>
                        <width>80</width>
                        <height>80</height>
                        <texture>left.png</texture>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                    </control>
                    <control type="image">
                        <posx>1190</posx>
                        <posy>320</posy>
                        <width>80</width>
                        <height>80</height>
                        <texture>right.png</texture>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                    </control>
                    <control type="image">
                        <!--background for description-->
                        <animation type="Focus">
                            <effect type="slide" start="0,215" end="0,0" time="100" delay="200"/>
                        </animation>
                        <posx>0</posx>
                        <posy>500</posy>
                        <width>1280</width>
                        <height>220</height>
                        <texture>black.png</texture>
                        <colordiffuse>CCFFFFFF</colordiffuse>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                    </control>
                    <control type="textbox">
                        <!--text of description-->
                        <animation type="Focus">
                            <effect type="slide" start="0,215" end="0,0" time="100" delay="200"/>
                        </animation>
                        <posx>20</posx>
                        <posy>505</posy>
                        <width>1240</width>
                        <height>215</height>
                        <font>font28</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        <autoscroll delay="5000" time="2500" repeat="10000">Control.HasFocus(100)</autoscroll>
                        <wrapmultiline>true</wrapmultiline>
                        <label>$INFO[ListItem.Label2]</label>
                        <textcolor>white</textcolor>
                        <visible>$INFO[ListItem.Property(showInfo)]</visible>
                    </control>
                </focusedlayout>
            </control>
            <control type="textbox" id="103">
                <!--usage instructions-->
                <posx>20</posx>
                <posy>10</posy>
                <width>1200</width>
                <height>120</height>
                <align>right</align>
                <aligny>top</aligny>
                <textcolor>FFAAAAAA</textcolor>
                <font>font13</font>
            </control>
        </control>
    </controls>
</window>
